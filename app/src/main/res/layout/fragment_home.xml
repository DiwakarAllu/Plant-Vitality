<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_intro2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center"
                    app:cardElevation="20dp">

                    <ImageView
                        android:id="@+id/leafImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/plant_img"
                         />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Predict And Plant...ðŸ’•"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    android:textColor="#E91E63"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_marginTop="50dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center_horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="25dp"
                                android:text="How to use! "
                                android:textSize="20sp"
                                android:fontFamily="serif"
                                android:textColor="#025C54"
                                android:textStyle="bold" />
                            <TextView
                                android:fontFamily="serif"
                                android:layout_gravity="bottom|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#01635A"
                                android:layout_marginTop="46dp"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:textStyle="italic"
                                android:text="@string/instruct"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_below="@+id/card"
                            android:id="@+id/card5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_marginTop="50dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/cam"
                                    android:layout_width="70dp"
                                    android:layout_height="55dp"
                                    android:layout_centerInParent="true"
                                    app:lottie_autoPlay="true"
                                    android:layout_marginRight="20dp"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/camera3"></com.airbnb.lottie.LottieAnimationView>

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/gal"
                                    android:layout_width="70dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/photo"></com.airbnb.lottie.LottieAnimationView>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ss"
                        android:text="About Fertilizers"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="22sp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/aboutSoil"
                        android:lineSpacingExtra="5dp"
                        android:includeFontPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>


                    <ImageView
                        android:layout_margin="20dp"
                        android:id="@+id/map"
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:src="@drawable/soil_plant"
                        />

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/cropsGrown"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:background="@drawable/rounded_corner"-->
<!--                        android:layout_marginRight="5dp"-->
<!--                        android:gravity="center"-->
<!--                        android:text="Crops Grown">-->

<!--                    </com.google.android.material.button.MaterialButton>-->

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_intro1"
        android:layout_width="match_parent"
        android:background="@drawable/onemore"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <TextView
                android:fontFamily="serif-monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Hi! Welcome to plantVit"
                android:textColor="#01655B"
                android:textSize="21sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="50dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:text="What is Plant Vitality"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:textColor="#025C54"
                        android:textStyle="bold" />
                    <TextView
                        android:fontFamily="serif"
                        android:layout_gravity="bottom|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#01635A"
                        android:layout_marginTop="46dp"
                        android:padding="8dp"
                        android:textSize="14dp"
                        android:textStyle="italic"
                        android:text="@string/how"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginTop="50dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:src="@drawable/scanner"
                            android:contentDescription="@string/app_name" />
                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/report"
                            android:contentDescription="@string/app_name" />
                        <ImageView
                            android:src="@drawable/medication"
                            android:id="@+id/img5"
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:contentDescription="@string/app_name" />

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="200dp"
                        android:layout_height="186dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:fontFamily="serif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Heal Your Crop!"
                        android:textColor="#015B52"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />
                    <Button
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let's find..."
                        android:backgroundTint="#015B52"
                        android:textAllCaps="false"
                        android:layout_gravity="bottom|center_horizontal"

                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</FrameLayout>